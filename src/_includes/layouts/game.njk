---
layout: base.njk
---

{# Individual Game Page #}

<div class="game-page">

  {# Breadcrumb #}
  <div class="container">
    <nav class="breadcrumb">
      <a href="/">Home</a> / 
      <a href="/games">Games</a> / 
      <span>{{ game.title }}</span>
    </nav>
  </div>

  <div class="container">
    <div class="game-layout">
      
      {# Main Content #}
      <div class="game-main">
        
        {# Game Info #}
        <h1>{{ game.title }}</h1>
        <div class="game-meta">
          <span class="category">{{ game.category }}</span>
        </div>

        {# Game Iframe #}
        <div class="game-container">
          <iframe 
            src="{{ game.url }}" 
            frameborder="0" 
            allowfullscreen
            title="{{ game.title }}">
          </iframe>
        </div>

        {# In-Content Ad #}
		<div class="ad-container">
				{% import "components/ad.njk" as ads %}
				{{ ads.adBanner(250, 300) }}
		</div>

        {# Description #}
        <div class="game-description">
          <h2>About {{ game.title }}</h2>
          <p>{{ game.description }}</p>
          
          {% if game.instructions %}
            <h3>How to Play</h3>
            <p>{{ game.instructions }}</p>
          {% endif %}

          {# Tags #}
          <div class="game-tags">
            {% for tag in game.tags %}
              <a href="/games/tag/{{ tag }}" class="tag">{{ tag }}</a>
            {% endfor %}
          </div>
        </div>

      </div>

      {# Sidebar #}
      <aside class="game-sidebar">
        
        {# Sidebar Ad #}
        <div class="ad-container ad-sidebar">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-YOUR_PUBLISHER_ID"
               data-ad-slot="3456789012"
               data-ad-format="vertical"></ins>
          <script>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        {# Popular Games Widget #}
        <div class="sidebar-widget">
          <h3>ðŸ”¥ Popular Games</h3>
          <ul>
            {% for popular in collections.games | limit(5) %}
              <li>
                <a href="/games/{{ popular.data.slug }}">
                  {{ popular.data.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>

      </aside>

    </div>
  </div>

</div>