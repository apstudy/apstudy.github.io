<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {# SEO #}
  <title>{% if game and game.title %}{{ game.title }} | {{ site.title }}{% else %}{{ title or site.title }}{% endif %}</title>
  <meta name="description" content="{{ site.description }}">
  <link rel="canonical" href="https://quizape.com{{ page.url | url }}">
  
  {# Stylesheets #}
  <link rel="stylesheet" href="{{ '/css/style.min.css' | url }}?v={{ buildVersion }}">

	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-0XL7N56XVD"></script>
	<script>
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
	gtag('js', new Date());

	gtag('config', 'G-0XL7N56XVD');
	</script>
  
</head>

<body data-build="{{ buildVersion }}">
  
  {# Include Header #}
  {% include "header.njk" %}
  
  {# Main Content Area #}
  <main class="site-main">
    {{ content | safe }}
  </main>
  
  {# Include Footer #}
  {% include "footer.njk" %}
  
  {# Global JavaScript #}
  <script src="{{ '/js/main.min.js' | url }}?v={{ buildVersion }}"></script>

  {# Page-specific scripts - override in child templates #}
  {% block pageScripts %}{% endblock %}

</body>
</html>